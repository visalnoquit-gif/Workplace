local Players = game:GetService("Players")
local player = Players.LocalPlayer

repeat task.wait() until player and player:FindFirstChild("PlayerGui")

local repStorage = game:GetService("ReplicatedStorage")
local chatEvents = repStorage:FindFirstChild("DefaultChatSystemChatEvents")
if not (chatEvents and chatEvents:FindFirstChild("SayMessageRequest")) then return end

local say = chatEvents.SayMessageRequest
local message = "janh bork anh ah ckhout pong kdorr"
local delaySec = 3

task.spawn(function()
    while true do
        pcall(function()
            say:FireServer(message, "All")
        end)
        task.wait(delaySec)
    end
end)
