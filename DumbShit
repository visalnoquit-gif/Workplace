local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- Function to make a button float smoothly
local function makeFloat(button)
    spawn(function()
        while button.Parent and button.Visible do
            local newPos = UDim2.new(math.random(),0,math.random(),0)
            local tween = TweenService:Create(button, TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {Position = newPos})
            tween:Play()
            tween.Completed:Wait()
        end
    end)
end

-- Function to create and show a button with a click callback
local function createFloatingButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 200, 0, 50)
    btn.Position = UDim2.new(0.5,0,0.5,0)
    btn.AnchorPoint = Vector2.new(0.5,0.5)
    btn.Text = text
    btn.BackgroundColor3 = Color3.fromRGB(255,100,100)
    btn.TextScaled = true
    btn.Parent = screenGui
    btn.Visible = true
    makeFloat(btn)

    btn.MouseButton1Click:Connect(function()
        btn.Visible = false
        callback()
    end)
end

-- Sequence
createFloatingButton("joch anh mk ah ckhout", function()
    createFloatingButton("joch anh oy Klang tik mk", function()
        createFloatingButton("joch doch ach", function()
            player:Kick("Ah Vi Ah Vicheka Ah Tay doch ach")
        end)
    end)
end)
